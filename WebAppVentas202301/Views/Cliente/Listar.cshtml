@model IEnumerable<WebAppVentas202301.Models.TbCliente>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<html>
    <body>
        <h1>LISTADO DE CLIENTES REGISTRADOS</h1>
        <h2>
            Buscar<input class="form-control" id="myInput" type="text" placeholder="Search..." />
            <br />
        </h2>
        <table class="table table-hover">
            <thead>
                <tr>
                    <td scope="col">Codigo</td>
                    <td scope="col">Razon Social</td>
                    <td scope="col">Direccion</td>
                    <td scope="col">Telefono</td>
                    <td scope="col">RUC</td>
                    <td scope="col">Editar</td>
                    <td scope="col">Eliminar</td>
            </tr>
            </thead>
            <tbody id="myTable">
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.CodCli</td>
                        <td>@item.RazSocCli</td>
                        <td>@item.DirCli</td>
                        <td>@item.TlfCli</td>
                        <td>@item.RucCli</td>
                        <td><a asp-action="Edit" asp-route-id="@item.CodCli">Editar</a></td>
                        <td><a asp-action="Delete" asp-route-id="@item.CodCli">Eliminar</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </body>
</html>
<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>