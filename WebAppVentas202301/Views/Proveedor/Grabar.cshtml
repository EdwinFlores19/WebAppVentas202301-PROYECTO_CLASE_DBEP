@model IEnumerable<WebAppVentas202301.Models.TbProveedor>


<html>
    <body>
        <h1>LISTADO DE TRANSACCIONES DE PROVEEDORES</h1>
        <h2>
            Buscar<input class="form-control" id="myInput" type="text" placeholder="Search..." />
            <br />
        </h2>
        <table class="table table-hover">
            <thead>
                <tr>
                    <td scope="col">Codigo</td>
                    <td scope="col">Razon Social</td>
                    <td scope="col">Direccion</td>
                    <td scope="col">Telefono</td>
                    <td scope="col">Cod2</td>
                    <td scope="col">Nombre</td>
                    <td scope="col">Editar</td>
                    <td scope="col">Eliminar</td>
            </tr>
            </thead>
            <tbody id="myTable">
                @foreach(var item in Model)
                {
                    <tr>
                    <td>@item.CodPrv</td>
                    <td>@item.RazSocPrv</td>
                    <td>@item.DirPrv</td>
                    <td>@item.TelPrv</td>
                    <td>@item.CodDis</td>
                    <td>@item.RepVen</td>
                        <td><a asp-action="Edit" asp-route-id="@item.CodPrv">Editar</a></td>
                        <td><a asp-action="Delete" asp-route-id="@item.CodPrv">Eliminar</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </body>
</html>
<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>

